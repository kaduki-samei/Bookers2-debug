<% books.book_comments.each do |comment| %>
  <tr>
    <td>
      <%= link_to(comment.user) do %>
      <%= image_tag comment.user.get_profile_image, size:"100x100" %><br>
      <%= comment.user.name %>
      <% end %>
    </td>
    <td><%= comment.body %></td>
    <% if comment.user == current_user %>
      <td><%= link_to "Destroy", book_book_comment_path(comment.book_id, comment.id), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{comment.id}"%></td>
    <% end %>
  </tr>
<% end %>
